<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".fragment.PerfilInstituicaoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewEmailUsuarioInst"
            app:layout_constraintVertical_bias="0.0">

            <TextView
                android:id="@+id/textViewTituloPerfilInst"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Responsável"
                android:textAlignment="center"
                android:textColor="@color/colorLabelRodape"
                android:textSize="24sp" />

            <Button
                android:id="@+id/buttonCadastrarResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/ic_add_asset_24dp"
                android:paddingLeft="5dp"
                android:text="  Cadastrar"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/buttonAlterarResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/ic_loop_asset_24dp"
                android:paddingLeft="5dp"
                android:text="  Alterar"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/buttonRemoverResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/ic_remove_asset_24dp"
                android:paddingLeft="5dp"
                android:text="  Remover"
                android:textAlignment="textStart" />

            <Button
                android:id="@+id/buttonListarResponsavel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:drawableLeft="@drawable/ic_list_asset_24dp"
                android:paddingLeft="5dp"
                android:text="  Listar"
                android:textAlignment="textStart" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageViewPerfilInstituicao"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/businessman"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewNomeInst"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="Nome:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPerfilInstituicao" />

        <TextView
            android:id="@+id/textViewNomeUsuarioInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Instituição"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/textViewNomeInst"
            app:layout_constraintTop_toBottomOf="@+id/imageViewPerfilInstituicao" />

        <TextView
            android:id="@+id/textViewEmailInstituicao"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:text="Email:"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewNomeInst" />

        <TextView
            android:id="@+id/textViewEmailUsuarioInst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="instituicao@gmail.com"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textViewEmailInstituicao"
            app:layout_constraintTop_toBottomOf="@+id/textViewNomeUsuarioInt" />

        <Button
            android:id="@+id/buttonAlterarSenhaInst"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_loop_asset_24dp"
            android:paddingLeft="10dp"
            android:text="  Alterar Senha"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/buttonDeslogarInst"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:drawableLeft="@drawable/ic_power_asset_24dp"
            android:paddingLeft="10dp"
            android:text="  Sair"
            android:textAlignment="textStart"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/buttonAlterarSenhaInst"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>